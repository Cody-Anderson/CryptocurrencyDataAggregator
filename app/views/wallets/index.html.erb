<!DOCTYPE html>
<html>
    <script language="javascript">
      function toggle(s) {
        if(s === 'web') {
            var a = document.getElementById('phone');
            var b = document.getElementById('pc');
            a.style.display = 'none';
            b.style.display = 'none';
        }
        else if(s === 'phone') {
            var a = document.getElementById('web');
            var b = document.getElementById('pc');
            a.style.display = 'none';
            b.style.display = 'none';
        }
        else {
            var a = document.getElementById('web');
            var b = document.getElementById('phone');
            a.style.display = 'none';
            b.style.display = 'none';
        }
        var e = document.getElementById(s);
        var displaySetting = e.style.display;
        var button = document.getElementById(s + 'Btn');
				
        if (displaySetting == 'block') {
            e.style.display = 'none';
            a.style.display = 'block';
            b.style.display = 'block';
        }
        else { 
            e.style.display = 'block';
            a.style.display = 'none';
            b.style.display = 'none';
        }
      }  
    </script>
    <style>
        div#web {
            display: none;
        }
        div#phone {
            display: none;
        }
        div#pc {
            display: none;
        }
    </style>
    <meta charset="UTF-8">
    <head>
        <title>Wallets</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/basic_style.css">
    </head>
    <body>
        <%= render "header/header" %>
        <div style="margin: 0 auto; width: 400px;">
            <br>
            <button class="btn" onclick="toggle('web')" id="webBtn">Web</button>
            <button class="btn" onclick="toggle('phone')" id="phoneBtn">Phone</button>
            <button class="btn" onclick="toggle('pc')" id="pcBtn">PC</button>
        </div>
        <div style="margin: 0 auto; width: 400px;">
            <div id="web"><button class="btn">Web Button Test</button></div>
            <div id="phone"><button class="btn">Phone Button Test</button></div>
            <div id="pc"><button class="btn">PC Button Test</button></div>
        </div>
    </body>
</html>